@model MvcStok.Models.Entity.TBLURUNLER
@{
    ViewBag.Title = "YeniUrun";
    Layout = "~/Views/Shared/_MainLayout.cshtml";


}

<form method="post" class="form-group">

    <div>
        <label>ÜRÜN ADI</label>
        <input type="text" class="form-control" name="UrunAd" required=""/>
    </div>

    <div>
        <label>MARKASI</label>
        <input type="text" class="form-control" name="Marka" required="" placeholder="Markasını yazınız"/>
    </div>

    <div>
        <label>ÜRÜN KATEGORİSİ</label>

        @Html.DropDownListFor(m => m.TBLKATEGORILER.Kategoriid,
       (List<SelectListItem>)ViewBag.dgr,
       new { @class = "form-control" })


    </div>

    <div>
        <label>FİYAT</label>
        <input type="text" class="form-control" name="Fiyat" />
    </div>

    <div>
        <label>STOK ADET</label>
        <input type="text" class="form-control" name="Stok" />
    </div>

    <div style="margin-top:15px">
        <button class="btn btn-info">Ürün Ekle</button>
    </div>








</form>

