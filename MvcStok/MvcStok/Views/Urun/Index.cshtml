@using MvcStok.Models.Entity
@model List<TBLURUNLER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">

    <tr>

        <th>ÜRÜN ID</th>
        <th>ÜRÜN ADI</th>
        <th>ÜRÜN MARKASI</th>
        <th>KATEGORİ</th>
        <th>FİYAT</th>
        <th>STOK</th>
        <th>SİL</th>
        <th>GÜNCELLE<th>
    </tr>

    <tbody>


        @foreach(var urn in Model)
        {
        <tr>

            <th>@urn.Urunid</th>
            <td>@urn.UrunAd</td>
            <td>@urn.Marka</td>
            <td>@urn.UrunKategori</td>
            <td>@urn.Fiyat</td>
            <td>@urn.Stok</td>
            <td><a href="/URUN/SIL/@urn.Urunid" class="btn btn-danger">SİL</a></td>
            <td><a href="/URUN/UrunGetir/@urn.Urunid" class="btn btn-success">GÜNCELLE</a></td>
        </tr>
                
        }

    </tbody>

</table>

<a href="/URUN/YeniUrun/" class="btn btn-primary">YENİ ÜRÜN EKLE</a>

